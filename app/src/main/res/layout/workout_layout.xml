<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/exercise_name_bg_addworkout">

    <ImageView
        android:id="@+id/exercise_photo"
        android:layout_width="204dp"
        android:layout_height="131dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/workoutimage" />

    <TextView
        android:id="@+id/exercise_name"
        android:layout_width="175dp"
        android:layout_height="131dp"
        android:layout_marginTop="8dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Workout Exercises"
        android:textColor="#0B0A0A"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/exercise_photo"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/how_to_do"
        android:layout_width="356dp"
        android:layout_height="51dp"
        android:layout_marginTop="148dp"
        android:layout_marginBottom="8dp"
        android:text="How to Do"
        android:textColor="#0B0B0A"
        android:textStyle="bold"
        android:visibility="visible"
        app:backgroundTint="#CDDC39"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>