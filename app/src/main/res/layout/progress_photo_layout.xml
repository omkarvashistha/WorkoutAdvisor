<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:background="@drawable/backgroundcrop"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/progressImg"
        android:layout_width="342dp"
        android:layout_height="325dp"
        android:layout_marginTop="76dp"
        android:padding="5dp"
        android:src="@drawable/warmup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/photo_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="112dp"
        android:fontFamily="@font/helvetica"
        android:text="20 Apr,20022"
        android:textColor="#1B1919"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/progressImg"
        app:layout_constraintTop_toBottomOf="@+id/progressImg" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="39dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/delete_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>