<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/exercise_name_bg_addworkout"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/progressImg"
        android:layout_width="267dp"
        android:layout_height="208dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/warmup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/photo_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="148dp"
        android:fontFamily="@font/helvetica"
        android:text="20 Apr,20022"
        android:textColor="#1B1919"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/progressImg"
        app:layout_constraintTop_toBottomOf="@+id/progressImg" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/delete_photo"
        app:layout_constraintEnd_toEndOf="@+id/progressImg"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/photo_date"
        app:layout_constraintTop_toBottomOf="@+id/progressImg" />

</androidx.constraintlayout.widget.ConstraintLayout>