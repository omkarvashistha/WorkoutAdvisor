<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/exercise_name_bg_addworkout"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/progressImg"
        android:layout_width="267dp"
        android:layout_height="208dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/photo_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/helvetica"
        android:text="Photo date"
        android:textColor="#1B1919"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="@+id/progressImg"
        app:layout_constraintStart_toStartOf="@+id/progressImg"
        app:layout_constraintTop_toBottomOf="@+id/progressImg" />

</androidx.constraintlayout.widget.ConstraintLayout>